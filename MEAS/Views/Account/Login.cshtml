

@using MEAS.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewBag.Title = "Login";
}
<head>

    <style>
        .control-label {
            vertical-align: central;
            margin: 104px,10px,10px,10px;
        }

        .btn {
            padding: 20px,10px;
            margin: 20px,10px;
        }

        .form-group {
            margin: 4px,10px,10px,10px;
        }

        .panel-x {
            height: 100%;
            vertical-align: bottom;
            background-color: yellow;
        }
    </style>

</head>



<div class="panel panel-info col-md-6 col-md-offset-3 panel-x">
    <div>
        <h2>登录</h2>
    </div>
    <div>
        @{Html.RenderAction("UploadFile","File");}
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(null, null, new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
            {
            @Html.ValidationSummary()
            <div class="form-group">
                @*<label class="col-md-2    control-label">用户名</label>*@
                @Html.LabelFor(x => x.UserName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control input-sm" })
                </div>
                       
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "control-label col-md-2" })
                <div class="col-md-10 ">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control input-sm" })
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="submit" value="登录" class="btn btn-primary" />*@
                    <button class="btn btn-primary" type="submit">登录</button>
                </div>
            </div>
        }
    </div>
</div>






