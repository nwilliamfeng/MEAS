<!DOCTYPE html>
@{
    Layout = null;
}
@model IEnumerable<PageCategory>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="侧边导航菜单(可分组折叠)">
    <meta name="description" content="侧边导航菜单(可分组折叠)" />
    <meta name="HandheldFriendly" content="True" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link rel="shortcut icon" href="img/favicon.ico">
    <title>@ViewBag.Title</title>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="//cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    
    <link rel="shortcut icon" href="img/favicon.ico">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript">
        function jumpUrl( li) {
         
            $(li).addClass("li-select")
            .siblings().removeClass("li-select");
            $(li).parents(".panel-primary").siblings().each(function (e) {
                alert($(e).children.length);
            });
            var url = window.location.protocol + "//" + window.location.host + "/" +li.id;
            $.get(url).done(function (result) {
                $("#body").html(result);
            });
        }
        $(function () {
            $(".panel-collapse").each(function () {
                var $li = $(this).find("li");
              
                //$li.click(function (e) {
                //    e.preventDefault();
                //    var url = window.location.protocol+"//"+window.location.host+"/" + $(this).attr("id");
                //    $.get(url).done(function (result) {
                //        $("#body").html(result);
                //    });
                //   // alert(e.target.id);
                //});
            });
        });
    </script>
    <style>
        .panel-group {
            max-height: 770px;
            overflow: auto;
        }

        .leftMenu {
            margin: 10px;
            margin-top: 5px;
        }

        .li-select{
            background-color:cornflowerblue;
            color:white;
        }

            .leftMenu .panel-heading {
                font-size: 14px;
                padding-left: 20px;
                height: 36px;
                line-height: 36px;
                color: white;
                position: relative;
                cursor: pointer;
            }
                /*转成手形图标*/
                .leftMenu .panel-heading span {
                    position: absolute;
                    right: 10px;
                    top: 12px;
                }

            .leftMenu .menu-item-left {
                padding: 2px;
                background: transparent;
                border: 1px solid transparent;
                border-radius: 6px;
            }

                .leftMenu .menu-item-left:hover {
                    background: #C4E3F3;
                    border: 1px solid #1E90FF;
                }
    </style>
</head>
<body>



    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <!--3个span做成图标-->
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="..\Home\Index" class="navbar-brand">
                    <img src="..\favicon.ico" style="height:40%;width:40%;vertical-align:central" alt="Meas" />
                </a>
                <p class="navbar-text"><strong>Meas</strong></p>
            </div>
            <div class="collapse navbar-collapse tab_menu">
                <ul class="nav navbar-nav">
                    <li id="a1"><a href="..\Home">主页</a></li>
                    <li id="a2"><a href="..\Product">产品</a></li>
                    <li id="a3"><a href="..\admin">支持</a></li>
                </ul>

                @{Html.RenderAction("Summary", "Cart");}
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </nav>

    <div class="body-content">
        <div id="leftnav" class="col-xs-2">
            <div class="row">
                <div class="panel-group table-responsive" role="tablist" id="navdiv">
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var gp = "group" + i.ToString();
                        var gh = "grouphead" + i.ToString();
                        <div class="panel panel-primary leftMenu">
                            <div class="panel-heading" id="@gh" data-toggle="collapse" data-target="#@gp" role="tab">
                                <h4 class="panel-title">
                                    @Model.ElementAt(i).Title
                                    <span class="glyphicon glyphicon-chevron-down right"></span>
                                </h4>
                            </div>

                            <div id="@gp" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@gh">
                                <ul class="list-group">
                                    @foreach (var page in Model.ElementAt(i).Pages)
                                    {                                      
                                        <li  class="list-group-item" style="cursor:pointer;"  onclick="jumpUrl(this)"  id="@page.RelativeUrl">
                                            @page.Title
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div id="body" class="col-xs-10">

        </div>

    </div>

    <footer class="footer">
        <div class="container">
            <p class="pull-left">&copy; @DateTime.Now.Year - <a href="http://www.meas.com" target="_blank">MEAS</a></p>
            <p class="pull-right"><a id="scroll-to-top" style="display:none;" href="#" title="fw"><span class="glyphicon glyphicon-arrow-up"></span> </a></p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")

</body>
</html>
