<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap-searchbox.css" />

    @Styles.Render("~/Content/css")
    <style>
        html, body {
            height: 100%;
            margin-left: 0px;
        }


        .nav-top li > a {
            color: white;
        }

            .nav-top li > a:hover, .nav-top li > a:focus {
                color: black;
            }    
    </style>
    @*<script  type="text/javascript" src="~/Scripts/jquery-3.1.1.js"></script>
    <script type="text/javascript">
        $(function () {
            
        });
    </script>*@
</head>
<body style="height:100%;">
    <nav class="navbar-nav navbar-fixed-top" style="background-color:#0070c1;">       
        <div class="container pull-left">         
            <div class="navbar-header " style="background-color:#008df6;width:220px;height:50px;margin-left:-15px">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <!--3个span做成图标-->
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div >
                    <p class="navbar-text" style="color:white;font-size:large;margin-top:10px"><strong>company logo</strong></p>
                </div>              
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav nav-top">
                    <li id="a1"><a href="..\Home">主页</a></li>
                    <li id="a2"><a href="..\Product">产品</a></li>
                    <li id="a3"><a href="..\admin">支持</a></li>                 
                </ul>

                @*@{Html.RenderAction("Summary", "Cart");}*@
               
                <ul class="nav navbar-nav nav-top navbar-right">
                    <!--登录页-->
                    @Html.Partial("_LoginPartial")
                </ul>
                
                <!--搜索框-->
                <form class="navbar-form navbar-right">
                   <div class="form-group  right-inner-addon">
                       <i class="fa fa-search" aria-hidden="true"></i>
                       <input type="search"
                              class="form-control"
                              placeholder="Search" />                      
                   </div>                 
                </form>
                 
            </div>
        </div>
    </nav>


    <div style="height:100%;">

        @*<div  style="float:left;width:240px;padding-right:20px;height:100%;">
            <div style="background:#242424;height:100%;">
                @Html.Action("Index", "Navigation")                
            </div>
        </div>*@

        <div style="float:left;padding-right:20px;height:100%;">
            
                @Html.Action("Index", "Navigation")
             
        </div>
        <div class="body-content container" id="body" style="float:left;">
            @RenderBody()
        </div>
     
    </div>

    <footer class="modal-footer">
        <div class="container">
            <p class="pull-left">&copy; @DateTime.Now.Year - <a href="http://www.meas.com" target="_blank">MEAS</a></p>
            <p class="pull-right"><a id="scroll-to-top" style="display:none;" href="#" title="fw"><span class="glyphicon glyphicon-arrow-up"></span> </a></p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
